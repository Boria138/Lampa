{
  "name": "lampa",
  "author": {
    "name": "Boris Yumankulov <boriabloger@protonmail.com>"
  },
  "version": "1.2.2",
  "description": "A media streaming application for movies and TV shows",
  "license": "MIT",
  "homepage": "https://github.com/Boria138/Lampa",
  "main": "src/main.js",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --dev",
    "build-linux": "electron-builder --linux --publish=never",
    "build-mac": "electron-builder --mac --x64 --arm64 --publish=never"
  },
  "dependencies": {
    "electron-store": "^11.0.0",
    "which": "^6.0.0"
  },
  "devDependencies": {
    "electron": "40.0.0",
    "electron-builder": "26.5.0"
  },
  "build": {
    "appId": "dev.boria138.lampa",
    "productName": "lampa",
    "artifactName": "lampa-${arch}.${ext}",
    "linux": {
      "target": "AppImage",
      "icon": "assets/icon_linux.png",
      "category": "Multimedia"
    },
    "mac": {
      "category": "public.app-category.utilities",
      "icon": "assets/icon_mac.png",
      "target": [
        "dmg"
      ]
    },
    "publish": {
      "provider": "github",
      "owner": "Boria138",
      "repo": "Lampa"
    }
  },
  "files": [
    "assets/**/*",
    "src/**/*",
    "node_modules/*",
    "!dist/*"
  ]
}
